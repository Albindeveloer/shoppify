<section>
  <div class="class container">
    <div class="row mt-5 col-md-6">
      <a href="admin/add-product" class="btn btn-success ml-auto">add product</a>
    </div>
    <table class="table mt-5" id="productsTable" >
      <thead>
        <tr>
          <th scope="col">no</th>
          <th scope="col">title</th>
          <th scope="col">category</th>
          <th scope="col">description</th>
          <th scope="col">price</th>
          <th scope="col">image</th>
          <th scope="col">total quantity</th>
          <th scope="col">options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th scope="row">*</th>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td><img
                style="width: 50px;height:50px;"
                src="/product-images/{{this._id}}.jpg"
                alt=""
              /></td>
              <td>{{this.totalQuantity}}</td>
            <td><a
                href="/admin/edit-product/{{this._id}}"
                class="btn btn-success"
              >Edit</a>
              <a
                href="/admin/delete-product/{{this._id}}"
                class="btn btn-danger"
                onclick="return confirm('are you want to delte{{this.name}}?')"
              >Delete</a>
            </td>
          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>

<script>

  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>
<section>
    <!-- Login Wrapper Area-->
    <div class="login-wrapper d-flex align-items-center justify-content-center text-center" style="background: linear-gradient(to left, #41d5d4, #2747e7);">
      <!-- Background Shape-->
      <div class="background-shape"></div>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5"><img class="big-logo" style="width: 8rem; height:8rem;border-radius: 55%;" src="https://i.pinimg.com/originals/03/26/88/032688086182d7bd44a8e76327ca5b70.jpg" alt="">
            <!-- Register Form-->
            <div class="register-form mt-5 px-4">
               {{#if loginErr}}
        <small class="error text-danger">{{loginErr}}</small>
      {{/if}}
              <form action="/login" method="post">
               
                <div class="form-group text-start mb-4"><span>Email</span>
                  <label for="email"><i class="lni lni-envelope"></i></label>
                  <input class="form-control" id="email" name="email" type="email" placeholder="help@example.com" required>
                </div>
                <div class="form-group text-start mb-4"><span>Password</span>
                  <label for="password"><i class="lni lni-lock"></i></label>
                  <input class="form-control" id="password" name="password" type="password" placeholder="Password">
                </div>
                <button class="btn btn-warning btn-lg w-100" type="submit">Log In</button>
              </form>
            </div>
            <!-- Login Meta-->
            <div class="login-meta-data"><a class="forgot-password d-block mt-3 mb-1" href="forget-password.html">Forgot Password?</a>
              <p class="mb-0">Didn't have an account?<a class="ms-1" href="/signup">Register Now</a></p>
            </div>
            <!-- View As Guest-->
            <div class="view-as-guest mt-3"><a class="btn" href="/">View as Guest</a></div>
          </div>
        </div>
      </div>
    </div>
    </section>
   